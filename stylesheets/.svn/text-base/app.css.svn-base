.triangle-topright {
	width: 0;
	height: 0;
	border-top: 80px solid #f8b500; 
	border-left: 80px solid transparent;
	position:absolute;
	top:0px;
	right:0px;
}

.triangle-topright p {
	-webkit-transform: rotate(45deg); 
	-moz-transform: rotate(45deg);
	position:absolute;
	top:-60px;
	left:-40px;
	color:#fff;
	font-size:14px;
	text-shadow:1px 1px 1px rgba(0,0,0,.3);
}

